<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_task"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginHorizontal="3dp"
    android:layout_marginVertical="3dp"



    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/task_gradient"
    >

    <TextView
        android:id="@+id/task_name_textview"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_regular"
        android:lines="1"
        android:text="Задача 1"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/task_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="18dp"
        android:fontFamily="@font/roboto_light"
        android:text="Не задано"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/task_status_textview"
        android:layout_width="150dp"
        android:layout_height="18dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/roboto_light"
        android:text="Ожидает выполнения"
        android:textColor="@color/light_black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgClock"
        app:layout_constraintTop_toBottomOf="@+id/task_name_textview" />

    <ImageView
        android:id="@+id/imgClock"
        android:layout_width="14dp"
        android:layout_height="16dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/clock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iconColor"
        app:layout_constraintTop_toBottomOf="@+id/task_name_textview" />

    <ImageView
        android:id="@+id/iconColor"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/baseline_circle_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_star_24"
        app:layout_constraintBottom_toBottomOf="@+id/iconColor"
        app:layout_constraintEnd_toEndOf="@+id/iconColor"
        app:layout_constraintStart_toStartOf="@+id/iconColor"
        app:layout_constraintTop_toTopOf="@+id/iconColor" />


</androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>